TopRule = ($* $CHOICE $*) {slotAction = CHOICE._slotAction};

#What type of pizza?

CHOICE =
		$SMALL {_slotAction=SMALL._slotAction} |
    $MEDIUM {_slotAction=MEDIUM._slotAction} |
    $LARGE {_slotAction=LARGE._slotAction} |
    $EXTRA {_slotAction=EXTRA._slotAction};

SMALL = (small) {_slotAction='small'};
MEDIUM = (medium) {_slotAction='medium'};
LARGE = (large) {_slotAction='large'};
EXTRA = (extra large) {_slotAction='extra-large'};
